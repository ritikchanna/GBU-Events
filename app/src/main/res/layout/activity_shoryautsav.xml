<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="minor.gbuevents.Shoryautsav"
    android:background="#000">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carouselView_shor"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:fillColor="#FFFFFFFF"
            app:pageColor="#00000000"
            app:radius="6dp"
            app:slideInterval="3000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp">

        </com.synnapps.carouselview.CarouselView>

        <TextView
            android:id="@+id/about_shor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/carouselView_shor"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="About"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/about_text_shor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="It is the sports event organised at the university level . The competitions are held between the various hostels,Girls and boys separately."
            android:textAlignment="center"
            android:textColor="#FFF" />

        <ExpandableListView
            android:id="@+id/lvExp_shor"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/about_text_shor"
            android:layout_marginTop="14dp" />
    </RelativeLayout>
</ScrollView>

</android.support.constraint.ConstraintLayout>